generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Vehicle {
  id           String   @id @default(uuid())
  motorBrand   String
  model        String
  year         Int
  mileage      Int

  service      Float    
  parts        Float  
  fuel         Float 
  insurance    Float    
  safety       Float    
}
